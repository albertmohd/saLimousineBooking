# Sanganeb Limo - Environment Variables
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Resend Email API Key
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Stripe Payment Keys
# Get your keys from https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_ and sk_test_) for testing
# Use live keys (pk_live_ and sk_live_) for production
VITE_STRIPE_PUBLIC_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Session Secret (generate a random string)
SESSION_SECRET=your_random_secret_here_minimum_32_characters

# Server Port (Hostinger will assign this automatically)
PORT=5000
